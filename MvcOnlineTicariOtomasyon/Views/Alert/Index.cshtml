
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.7.0.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<div class="container">
    <div class="body-content">
        <br /><br />
        <button class="btn btn-primary" id="btn1">Tıkla</button>
    </div>
</div>

<script>
    $("#btn1").click(function () {
        /*swal("Başarıyla Kaydedildi", "", "success");*/
        swal({
            title: "Silmek istediğinize emin misiniz ?",
            text: "Bu işlemin dönüşü yoktur.",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    swal("Başarıyla Silindi", {
                        icon: "success",
                    });
                } else {
                    swal("Vazgeçtiniz, Silinme iptal edildi");
                }
            });
    });
</script>