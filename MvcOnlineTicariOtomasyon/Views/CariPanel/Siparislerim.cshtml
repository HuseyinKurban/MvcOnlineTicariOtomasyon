@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
    int count = 0;
    decimal tutar = 0;
}


<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header text-center bg-primary text-white">
            <h3>Sipariş Geçmişim</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Ürün Adı</th>
                        <th>Fiyat</th>
                        <th>Adet</th>
                        <th>Toplam</th>
                        <th>Tarih</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        tutar += item.ToplamTutar;
                        <tr>
                            <td>@count</td>
                            <td>@item.Urun.UrunAd</td>
                            <td>@item.Fiyat.ToString("C2")</td>
                            <td>@item.Adet</td>
                            <td>@item.ToplamTutar.ToString("C2")</td>
                            <td>@item.Tarih</td>
                        </tr>

                    }

                </tbody>
            </table>
            <div class="alert alert-info text-center">
                <h4 class="mb-0">Toplam Tutar:</h4>
                <h2 class="font-weight-bold">@tutar.ToString("C2")</h2>
            </div>
        </div>
    </div>
</div>
