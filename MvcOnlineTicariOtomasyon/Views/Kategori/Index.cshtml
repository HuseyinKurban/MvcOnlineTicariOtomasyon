@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int count = 0;
}


<table class="table table-bordered" style="margin-top:25px;">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.KategoriAd</td>
            <td><a href="/Kategori/KategoriGetir/@item.Kategoriid" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Kategori/KategoriSil/@item.Kategoriid" class="btn btn-danger">Sil</a></td>
        </tr>
    }

</table>
<a href="/Kategori/KategoriEkle" class="btn btn-primary">Kategori Ekle</a>
