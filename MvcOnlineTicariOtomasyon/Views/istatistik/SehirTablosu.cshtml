@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.MusteriSehir>
@{
    ViewBag.Title = "SehirTablosu";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int sehircount = 0;
}
<br />
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Müşteri Şehir Dağılımı Tablosu</h3>

            @*<div class="card-tools">
                    <ul class="pagination pagination-sm float-right">
                        <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                    </ul>
                </div>*@
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Şehir</th>
                        <th>Progress Bar</th>
                        <th style="width: 40px">Adet</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        sehircount++;
                        <tr>
                            <td>@sehircount.</td>
                            <td>@item.Sehir</td>
                            <td>
                                @if (item.Sayi <= 10)
                                {
                                    <div class="progress progress-xs">
                                        <div class="progress-bar progress-bar-danger" style="width: @item.Sayi%"></div>
                                    </div>
                                }
                                @if (item.Sayi > 10 && item.Sayi <= 20)
                                {
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-warning" style="width: @item.Sayi%"></div>
                                    </div>
                                }
                                @if (item.Sayi > 20 && item.Sayi <= 30)
                                {
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-success" style="width: @item.Sayi%"></div>
                                    </div>
                                }
                                @if (item.Sayi > 30)
                                {
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-info" style="width: @item.Sayi%"></div>
                                    </div>
                                }
                            </td>
                            <td>
                                @if (item.Sayi <= 10)
                                {
                                    <span class="badge bg-primary" style="color:white">@item.Sayi</span>
                                }
                                @if (item.Sayi > 10 && item.Sayi <= 20)
                                {
                                    <span class="badge bg-warning" >@item.Sayi</span>
                                }
                                @if (item.Sayi > 20 && item.Sayi <= 30)
                                {
                                    <span class="badge bg-success" style="color:white">@item.Sayi</span>
                                }
                                @if (item.Sayi > 30)
                                {
                                    <span class="badge bg-info" style="color:white">@item.Sayi</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <!-- /.card -->
</div>

